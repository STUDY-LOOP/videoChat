<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script>
        const NICKNAME = "<%= nickname %>"
        const ROOM_ID = "<%= roomID %>"
    </script>
    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="studyHomeChatScript.js"></script>
    <title>STUDY HOME</title>
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/mvp.css@1.12/mvp.css">

    <style>
        .container {
            display: grid; 
            grid-template-columns: 2fr 1fr;
            padding-right: 200px;
            padding-left: 200px;
        }
    </style>
</head>
<body>
    <header>
        <h1> TEAM12 - STUDY HOME</h1>
    </header>

    <div class="container">
        <div id="calendar" class="cell-a"></div>

        <div id="chatRoom" class="cell-b" style="overflow: auto; width:400px; height:300px;">
            <ul></ul>
        </div>
        
        <div id="calendar2" class="cell-c"></div>

        <div id="chatEnter" class="cell-d">
            <form id="notice">
                <input type="text" placeholder="notice" required>
                <button>Send</button>
            </form>

            <form id="msg">
                <input type="text" placeholder="message" required>
                <button>Send</button>
            </form>
        </div>

        <div id="buttons" class="cell-e"></div>

        <div id="videoEnter" class="cell-f">
            <form action="/videoChat" method="post">
                <input type="hidden" id="Nickname" name="Nickname">
                <input type="hidden" id="StudyName" name="StudyName">
                <input type="submit" id="btnEnterRoom" value="Enter Video Chat">
            </form>
        </div>
    </div>


    <script>
        document.getElementById("Nickname").value = NICKNAME;
        document.getElementById("StudyName").value = ROOM_ID; 

        console.log(ROOM_ID, NICKNAME);
    </script>
</body>
</html>